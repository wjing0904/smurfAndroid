<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/classroom_100dp"
        android:layout_height="@dimen/classroom_100dp"
        android:id="@+id/user_icon"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/classroom_100dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/classroom_20dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/classroom_18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="测试">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/classroom_20dp"
        android:background="@android:color/black">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录应用后将获得以下权限(昵称、头像等)"
        android:layout_marginTop="@dimen/classroom_20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/classroom_20sp"
        android:layout_marginLeft="@dimen/classroom_10dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/user_sure"
        android:text="确认登录"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/classroom_20dp"
        android:gravity="center"
        android:background="@drawable/login_btn"
        android:layout_marginLeft="@dimen/classroom_20dp"
        android:layout_marginRight="@dimen/classroom_20dp">
    </TextView>
</LinearLayout>