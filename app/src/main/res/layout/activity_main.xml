<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/logo_img"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/record_time_txt"
        android:layout_width="@dimen/classroom_90dp"
        android:layout_height="@dimen/classroom_30dp"
        android:layout_marginRight="@dimen/classroom_10dp"
        android:layout_marginTop="@dimen/classroom_5dp"
        android:layout_gravity="right"
        android:background="@drawable/record_delay_time_shape"
        android:text="3"
        android:gravity="center"
        android:textSize="@dimen/classroom_14sp"
        android:textColor="@color/class_room_F9F9F9"
        android:visibility="visible" />

</FrameLayout>